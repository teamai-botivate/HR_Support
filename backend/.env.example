# =============================================
# Botivate HR Support - Environment Config
# =============================================

# --- Application ---
APP_NAME=Botivate HR Support
APP_ENV=development
APP_SECRET_KEY=change-this-to-a-strong-random-secret
APP_BASE_URL=http://localhost:8000

# --- Database (Master DB) ---
DATABASE_URL=sqlite+aiosqlite:///./botivate_master.db

# --- OpenAI / LLM ---
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# --- Google Sheets (Service Account) ---
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/your/service-account.json

# --- Email (SMTP for credential distribution) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# --- JWT Auth ---
JWT_SECRET_KEY=change-this-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=480

# --- ChromaDB (Vector Store for RAG) ---
CHROMA_PERSIST_DIR=./chroma_data
